{
  "name": "martial-arts",
  "version": "1.0.0",
  "main": "app.js",
  "scripts": {
    "postinstall": "cd client && npm install",
    "build:client": "cd client && npm run build",
    "build:server": "babel server -d build --extensions \".js,.ts\"",
    "build": "rimraf build && npm run build:server && npm run build:client",
    "type-check": "tsc --noEmit",
    "watch": "nodemon --watch server --ext js,ts,css --exec",
    "dev": "npm run watch \"npm run type-check && npm run build && cross-env NODE_ENV=development node build/app.js\"",
    "prod": "npm run type-check && npm run build && cross-env NODE_ENV=production node build/app.js"
  },
  "license": "ISC",
  "dependencies": {
    "@babel/runtime": "^7.26.9",
    "animate.css": "^4.1.1",
    "cookie-parser": "^1.4.7",
    "core-js": "^3.41.0",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "helmet": "^8.0.0",
    "mongoose": "^8.12.1",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.24.7",
    "@babel/core": "^7.24.7",
    "@babel/node": "^7.24.7",
    "@babel/plugin-transform-object-rest-spread": "^7.24.7",
    "@babel/plugin-transform-runtime": "^7.24.7",
    "@babel/preset-env": "^7.24.7",
    "@babel/preset-typescript": "^7.26.0",
    "@types/cookie-parser": "^1.4.8",
    "@types/express": "^5.0.0",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.13.10",
    "cross-env": "^7.0.3",
    "nodemon": "^3.1.0",
    "pm2": "^5.3.1",
    "rimraf": "^5.0.5",
    "typescript": "^5.8.2"
  }
}
