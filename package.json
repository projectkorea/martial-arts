{
  "name": "martial-arts",
  "version": "1.0.0",
  "description": "",
  "main": "app.js",
  "scripts": {
    "build:server": "babel src -d build --extensions \".js,.ts\" --ignore \"src/client/**,src/static/**,webpack.config.js\"",
    "build:client": "cross-env WEBPACK_ENV=production webpack --config webpack.config.js",
    "copyfiles": "copyfiles -u 1 \"src/static/**/*\" build && copyfiles -u 1 \"src/views/**/*\" build && copyfiles -u 1 \"src/.env\" build",
    "build": "rimraf build && npm run build:server && npm run build:client && npm run copyfiles",
    "type-check": "tsc --noEmit",
    "watch": "nodemon --watch src --ext js,ts,css --exec",
    "dev": "npm run watch \"npm run type-check && npm run build && cross-env NODE_ENV=development node build/app.js\"",
    "prod": "npm run type-check && npm run build && cross-env NODE_ENV=production node build/app.js"
  },
  "license": "ISC",
  "dependencies": {
    "@babel/runtime": "^7.26.9",
    "animate.css": "^4.1.1",
    "cookie-parser": "^1.4.7",
    "core-js": "^3.41.0",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "helmet": "^8.0.0",
    "mongoose": "^8.12.1",
    "morgan": "^1.10.0",
    "pug": "^3.0.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.24.7",
    "@babel/core": "^7.24.7",
    "@babel/node": "^7.24.7",
    "@babel/plugin-transform-object-rest-spread": "^7.24.7",
    "@babel/plugin-transform-runtime": "^7.24.7",
    "@babel/preset-env": "^7.24.7",
    "@babel/preset-typescript": "^7.26.0",
    "@types/cookie-parser": "^1.4.8",
    "@types/express": "^5.0.0",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.13.10",
    "babel-loader": "^9.1.3",
    "copy-webpack-plugin": "^13.0.0",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "css-loader": "^7.1.2",
    "dotenv-webpack": "^8.0.1",
    "mini-css-extract-plugin": "^2.8.1",
    "nodemon": "^3.1.0",
    "pm2": "^5.3.1",
    "rimraf": "^5.0.5",
    "style-loader": "^3.3.4",
    "ts-loader": "^9.5.2",
    "typescript": "^5.8.2",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4"
  }
}
