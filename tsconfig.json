{
  "compilerOptions": {
    "strict": false,                      // 모든 strict 체크를 비활성화
    "strictNullChecks": false,            // null 체크 비활성화
    "strictPropertyInitialization": false, // 프로퍼티 초기화 체크 비활성화
    //위는 추후 점진적으로 마이그레이션 하면서 삭제할 것들
    "noImplicitAny": false,
    "target": "es5",
    "module": "commonjs",
    "lib": ["dom", "es6", "es2017", "esnext.asynciterable"],
    "sourceMap": true,
    "outDir": "./build",
    "rootDir": "./src",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    },
    "allowJs": true,
    "checkJs": false
  },
  "include": ["src/**/*.js", "src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules", "build", "src/static"]
} 