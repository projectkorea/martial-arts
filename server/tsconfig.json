{
  "compilerOptions": {
    "noImplicitAny": true,
    "strictNullChecks": true,
    "target": "es5",
    "module": "ESNext",
    "lib": [
      "dom",
      "dom.iterable",
      "es6",
      "es2017",
      "ESNext",
    ],
    "sourceMap": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "allowJs": true,
    "checkJs": false,
    // build
    "outDir": "../build",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "*": ["../node_modules/*", "./*"]
    }
  },
  "include": ["**/*.ts"],
  "exclude": ["../node_modules", "../build"]
} 